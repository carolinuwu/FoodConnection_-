@model FoodConnection__.Models.Receta
@{
    ViewData["Title"] = "Search";
}

<h1> Buscar Receta</h1>

<form asp-action="Buscar" method="post">
    <div class="form-group">
        <label for="name">Nombre de la Receta</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Ingresa el nombre de la receta" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
